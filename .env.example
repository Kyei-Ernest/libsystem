# ==========================================
# Library Management System - Environment Variables
# ==========================================

# Application
ENVIRONMENT=development
APP_NAME=libsystem
APP_VERSION=1.0.0

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
SHUTDOWN_TIMEOUT=15s
MAX_REQUEST_SIZE=104857600  # 100MB

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=libsystem
DB_PASSWORD=libsystem_dev_pass
DB_NAME=libsystem
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h
DATABASE_URL=postgres://libsystem:libsystem_dev_pass@postgres:5432/libsystem?sslmode=disable

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=libsystem_redis_pass
REDIS_DB=0
REDIS_URL=redis://:libsystem_redis_pass@redis:6379/0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=libsystem

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_THUMBNAILS=thumbnails
MINIO_REGION=us-east-1

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_CONSUMER_GROUP=libsystem-consumers
KAFKA_TOPIC_DOCUMENT_UPLOADED=document.uploaded
KAFKA_TOPIC_DOCUMENT_INDEXED=document.indexed
KAFKA_TOPIC_DOCUMENT_DELETED=document.deleted
KAFKA_COMPRESSION=snappy

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h  # 7 days
BCRYPT_COST=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BURST=100

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization,X-Request-ID
CORS_MAX_AGE=86400

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Monitoring
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Document Processing
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,html,xml,epub
THUMBNAIL_SIZE=200
OCR_ENABLED=true
TEXT_EXTRACTION_TIMEOUT=300s

# Indexing
INDEXER_WORKERS=4
INDEXER_BATCH_SIZE=100
INDEXER_FLUSH_INTERVAL=10s

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@libsystem.com

# External Services
GOOGLE_BOOKS_API_KEY=
WORLDCAT_API_KEY=

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
TRUSTED_PROXIES=

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_PUBLIC_COLLECTIONS=true
FEATURE_COMMENTS=true
FEATURE_VERSIONING=true
FEATURE_COLLABORATION=false

# Development
DEBUG=false
DEV_MODE=true
AUTO_MIGRATE=true
SEED_DATABASE=false